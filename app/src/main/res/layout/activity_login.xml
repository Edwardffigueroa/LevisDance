<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/recurso"
    android:padding="15dp"
    tools:context="com.levisdance.levisdance.Login">


    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo o Usuario" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usuario"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Contraseña" />

    <Button
        android:id="@+id/registrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contraseña"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/primary_dark"
        android:onClick="login"
        android:text="Iniciar"
        android:textColor="@color/icons" />

    <TextView
        android:id="@+id/nuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrarse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="register"
        android:text="Si no tienes cuenta Registrate Ahora" />

</RelativeLayout>
